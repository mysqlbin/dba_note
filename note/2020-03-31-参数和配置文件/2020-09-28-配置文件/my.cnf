[client]
port	= 3306
socket	= /home/mysql/3306/data/3306.sock

[mysqld]
user	= mysql
port	= 3306
basedir	= /usr/local/mysql
datadir	= /home/mysql/3306/data
socket	= /home/mysql/3306/data/3306.sock
pid-file = mysqldb.pid

#字符集设置
character-set-server = utf8mb4
collation-server=utf8mb4_general_ci
#init-connect='SET NAMES utf8mb4'
#init-connect='SET NAMES utf8mb4;Insert into audit_db.accesslog(ConnectionID ,ConnUser ,MatchUser ,LoginTime)values(connection_id(),user(),current_user(),now());'


skip_name_resolve = 1
open_files_limit  = 65535
back_log = 1024

max_connections = 3000
max_connect_errors = 1000000
max_user_connections = 0   #1000000

# cache、buffer
table_open_cache = 1024
table_definition_cache = 1024
table_open_cache_instances = 64
thread_stack = 512K
external-locking = FALSE
max_allowed_packet = 32M
sort_buffer_size = 4M
join_buffer_size = 4M
thread_cache_size = 768

tmp_table_size = 32M
max_heap_table_size = 32M
key_buffer_size = 32M
read_buffer_size = 8M
read_rnd_buffer_size = 4M
bulk_insert_buffer_size = 64M


# 这里业务场景来设置
interactive_timeout = 31536000  #游戏业务场景：31536000（1年）
wait_timeout = 31536000         #游戏业务场景：31536000（1年） 

tmpdir=/home/mysql/3306/tmp
innodb_temp_data_file_path = ibtmp1:64M:autoextend


# 慢日志
slow_query_log = 1
slow_query_log_file = slow.log
log-error = error.log
long_query_time = 1
#未使用索引的查询也被记录到慢查询日志中
log_queries_not_using_indexes =1
log_throttle_queries_not_using_indexes = 60
min_examined_row_limit = 100
log_slow_admin_statements = 1
log_slow_slave_statements = 1
server-id = 330607

#binlog
binlog_format = row
log-bin = /home/mysql/3306/logs/mysql-bin
sync_binlog = 1
binlog_cache_size = 4M
max_binlog_cache_size = 2G
max_binlog_size = 1G
expire_logs_days = 7
binlog_checksum = 1

# 开启GTID
gtid_mode = on
enforce_gtid_consistency = 1


#不区分大小写
lower_case_table_names = 1

#myisam
myisam_sort_buffer_size = 128M
myisam_max_sort_file_size = 10G
myisam_repair_threads = 1


# 时间参数
default-time-zone = '+8:00'
log_timestamps=SYSTEM

lock_wait_timeout = 3600
explicit_defaults_for_timestamp = 1
innodb_thread_concurrency = 0
innodb_sync_spin_loops = 100
innodb_spin_wait_delay = 30

transaction_isolation = READ-COMMITTED   # REPEATABLE-READ
#innodb_additional_mem_pool_size = 16M
# 根据物理内存调整，可以设置为物理内存的 50-70%
innodb_buffer_pool_size = 10G
innodb_buffer_pool_instances = 2
innodb_buffer_pool_load_at_startup = 1
innodb_buffer_pool_dump_at_shutdown = 1
innodb_data_file_path = ibdata1:1G:autoextend

#redo
innodb_flush_log_at_trx_commit = 1
innodb_log_buffer_size = 32M
innodb_log_file_size = 1G
innodb_log_files_in_group = 3

#undo 
innodb_max_undo_log_size = 4G


# 根据您的服务器IOPS能力适当调整
# 一般配普通SSD盘的话，可以调整到 10000 - 20000
# 配置高端PCIe SSD卡的话，则可以调整的更高，比如 50000 - 80000
innodb_io_capacity = 4000
innodb_io_capacity_max = 8000
innodb_flush_neighbors = 0
innodb_write_io_threads = 8
innodb_read_io_threads = 8
innodb_purge_threads = 4
innodb_page_cleaners = 4
innodb_open_files = 65535
innodb_max_dirty_pages_pct = 50
innodb_flush_method = O_DIRECT
innodb_lru_scan_depth = 4000
innodb_checksum_algorithm = crc32
innodb_lock_wait_timeout = 10      #50
innodb_rollback_on_timeout = 1     # 开启锁等待超时后自动回滚事务的操作
innodb_print_all_deadlocks = 1
innodb_file_per_table = 1
innodb_online_alter_log_max_size = 4G
internal_tmp_disk_storage_engine = InnoDB
innodb_stats_on_metadata = 0

innodb_checksums = 1

# 关闭query cache 
query_cache_size = 0
query_cache_type = 0


innodb_status_file = 0
# 注意: 开启 innodb_status_output & innodb_status_output_locks 后, 会导致log-error文件增长较快
innodb_status_output = 0
innodb_status_output_locks = 0

#performance_schema
#performance_schema = 1
#performance_schema_instrument = '%=on'

#定时任务机制
event_scheduler = on

#sql_safe_updates=1

sql_mode=NO_ENGINE_SUBSTITUTION   #SQL的严格模式,数据库升级后该参数要一致

[mysqldump]
quick
max_allowed_packet = 32M
